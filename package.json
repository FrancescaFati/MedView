{
  "name": "MedView",
  "displayName": "MedView",
  "description": "A medical image viewer for NIfTI and DICOM formats",
  "version": "1.0.0",
  "publisher": "FrancescaFati",
  "author": {
    "name": "Francesca Fati",
    "email": "francesca.fati@polimi.it"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FrancescaFati/MedView"
  },
  "homepage": "https://github.com/FrancescaFati/MedView#readme",
  "bugs": {
    "url": "https://github.com/FrancescaFati/MedView/issues"
  },
  "license": "GPLv3",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "medical",
    "imaging",
    "nifti",
    "dicom",
    "viewer",
    "radiology",
    "neuroimaging",
    "mri",
    "ct",
    "3d",
    "multi-planar"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCustomEditor:medview.viewer",
    "onCustomEditor:medview.series"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "medview.viewer",
        "displayName": "MedView Image Viewer",
        "selector": [
          {
            "filenamePattern": "*.nii"
          },
          {
            "filenamePattern": "*.nii.gz"
          },
          {
            "filenamePattern": "*.dcm"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dicom-parser": "^1.8.21",
    "nifti-reader-js": "^0.8.0"
  }
}
